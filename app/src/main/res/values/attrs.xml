<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BasalTextInputLayout">
        <attr name="inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textAutoCorrect" value="0x00008001" />
            <flag name="textAutoComplete" value="0x00010001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textImeMultiLine" value="0x00040001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textEnableTextConversionSuggestions" value="0x00100001" />
            <flag name="textUri" value="0x00000011" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textEmailSubject" value="0x00000031" />
            <flag name="textShortMessage" value="0x00000041" />
            <flag name="textLongMessage" value="0x00000051" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="textWebEditText" value="0x000000a1" />
            <flag name="textFilter" value="0x000000b1" />
            <flag name="textPhonetic" value="0x000000c1" />
            <flag name="textWebEmailAddress" value="0x000000d1" />
            <flag name="textWebPassword" value="0x000000e1" />
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>

        <attr name="maxLines" format="integer" min="0" />
        <attr name="minLines" format="integer" min="1" />
        <attr name="lines" format="integer" min="1" />
        <attr name="labelText" format="string"/>
        <attr name="singleLine" format="boolean" />

        <attr name="lineSpacingExtra" format="float" />

        <attr name="maxLength" format="integer" min="0" />

        <attr name="imeOptions">
            <flag name="actionSearch" value="0x00000003" />
            <flag name="actionSend" value="0x00000004" />
            <flag name="actionNext" value="0x00000005" />
            <flag name="actionDone" value="0x00000006" />
        </attr>

        <attr name="textSize" format="float" /> <!--Text size should be in float or int, ex: 14, 18-->
        <!--pass "[a-zA-Z0-9.,@ ]+" in value of digits for add that digits and add character that you want to use in field - like: .,@# etc-->
        <!--"[a-zA-Z ]+" this will allow only small, capital & space-->
        <attr name="digits" format="string" />

        <attr name="padding" format="dimension" />
        <attr name="paddingHorizontal" format="dimension" />
        <attr name="paddingVertical" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />

        <attr name="drawableEnd" format="reference|color" />
        <attr name="drawableStart" format="reference|color" />
        <attr name="tilTextColor" format="color" />
        <attr name="prefixText" format="string" />
        <attr name="fontFamilyStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="medium" value="2" />
            <flag name="semiBold" value="3" />
            <flag name="extraBold" value="4" />
            <flag name="light" value="5" />
            <flag name="extraLight" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BasalTextField">
        <attr name="btf_inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textAutoCorrect" value="0x00008001" />
            <flag name="textAutoComplete" value="0x00010001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textImeMultiLine" value="0x00040001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textEnableTextConversionSuggestions" value="0x00100001" />
            <flag name="textUri" value="0x00000011" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textEmailSubject" value="0x00000031" />
            <flag name="textShortMessage" value="0x00000041" />
            <flag name="textLongMessage" value="0x00000051" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="textWebEditText" value="0x000000a1" />
            <flag name="textFilter" value="0x000000b1" />
            <flag name="textPhonetic" value="0x000000c1" />
            <flag name="textWebEmailAddress" value="0x000000d1" />
            <flag name="textWebPassword" value="0x000000e1" />
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>

        <attr name="btf_maxLines" format="integer" min="0" />
        <attr name="btf_minLines" format="integer" min="1" />
        <attr name="btf_lines" format="integer" min="1" />
        <attr name="btf_labelText" format="string"/>
        <attr name="btf_singleLine" format="boolean" />

        <attr name="btf_lineSpacingExtra" format="float" />

        <attr name="btf_maxLength" format="integer" min="0" />

        <attr name="btf_imeOptions">
            <flag name="actionSearch" value="0x00000003" />
            <flag name="actionSend" value="0x00000004" />
            <flag name="actionNext" value="0x00000005" />
            <flag name="actionDone" value="0x00000006" />
        </attr>

        <attr name="btf_isPassword" format="boolean"/>
        <attr name="btf_isMobile" format="boolean"/>
        <!--pass "[a-zA-Z0-9.,@ ]+" in value of digits for add that digits and add character that you want to use in field - like: .,@# etc-->
        <!--"[a-zA-Z ]+" this will allow only small, capital & space-->
        <attr name="btf_digits" format="string" />
        <attr name="btf_hint" format="string"/>

        <attr name="btf_drawableEnd" format="reference|color" />
        <attr name="btf_drawableStart" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
    <!--Above portion is for custom calender view-->

    <!--Blur-->
    <declare-styleable name="BlurView">
        <attr name="blurOverlayColor" format="color" />
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr name="activeColor" format="reference|color" />
        <attr name="passiveColor" format="reference|color" />
        <attr name="textColorOtp" format="reference|color" />
        <attr name="autoFocusEnabled" format="boolean" />
        <attr name="digitsOtp" format="integer" />
        <attr name="textSizeOtp" format="integer" />
        <attr name="fontFamilyOtp">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="medium" value="2" />
            <flag name="semiBold" value="3" />
            <flag name="extraBold" value="4" />
            <flag name="light" value="5" />
            <flag name="extraLight" value="6" />
        </attr>
        <attr name="otpSymbol" format="string" />
        <attr name="password" format="boolean" />
        <attr name="keyboardType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BasalTextView">
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="medium" value="2" />
            <flag name="semiBold" value="3" />
            <flag name="extraBold" value="4" />
            <flag name="light" value="5" />
            <flag name="extraLight" value="6" />
        </attr>
    </declare-styleable>

    <attr name="dampingRatio" format="float" />
    <attr name="dotsClickable" format="boolean" />
    <attr name="dotsColor" format="color" />
    <attr name="dotsCornerRadius" format="dimension" />
    <attr name="dotsSize" format="dimension" />
    <attr name="dotsSpacing" format="dimension" />
    <attr name="dotsStrokeColor" format="color" />
    <attr name="dotsStrokeWidth" format="dimension" />
    <attr name="dotsWidthFactor" format="float" />
    <attr name="progressMode" format="boolean" />
    <attr name="selectedDotColor" format="color" />
    <attr name="stiffness" format="float" />
    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor" />
        <attr name="selectedDotColor" />
        <attr name="dotsSize" />
        <attr name="dotsWidthFactor" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="progressMode" />
        <attr name="dotsClickable" />
        <attr name="dotsElevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BasalNoDataFound">
        <attr name="bndf_title" format="string"/>
        <attr name="bndf_description" format="string"/>
        <attr name="bndf_image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="swipeDirection" format="integer">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
        </attr>
        <attr name="isEnabledSwipe" format="boolean"/>
        <attr name="isFreeDragAfterOpen" format="boolean"/>
        <attr name="isFreeHorizontalDrag" format="boolean"/>
        <attr name="isContinuousSwipe" format="boolean"/>
        <attr name="isTogether" format="boolean"/>
        <attr name="rightItem" format="reference"/>
        <attr name="leftItem" format="reference"/>
        <attr name="draggedItem" format="reference"/>
        <attr name="autoMovingSensitivity" format="integer"/>
        <attr name="rightDragViewPadding" format="dimension"/>
        <attr name="leftDragViewPadding" format="dimension"/>
    </declare-styleable>

</resources>

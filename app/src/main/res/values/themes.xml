<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AbcToGoMXB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AbcToGoMXB" parent="Base.Theme.AbcToGoMXB">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="AppBottomSheetDialogThemePicker" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStylePicker</item>
    </style>

    <style name="AppModalStylePicker" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
        <item name="android:backgroundTint">@color/color_peach_extra_light</item>
    </style>

    <style name="FilledButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/geist_semi_bold</item>
        <item name="android:background">@drawable/bg_filled_app_button</item>
        <item name="android:drawableEnd">@drawable/ic_button_icon</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:paddingVertical">@dimen/dp_10</item>
        <item name="android:paddingHorizontal">@dimen/dp_34</item>
        <item name="android:minWidth">@dimen/dp_0</item>
        <item name="android:minHeight">@dimen/dp_0</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlinedButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/geist_regular</item>
        <item name="android:background">@drawable/bg_outlined_app_button</item>
        <item name="android:drawableEnd">@drawable/ic_button_icon</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:paddingVertical">@dimen/dp_10</item>
        <item name="android:paddingHorizontal">@dimen/dp_34</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BNVTextStyleActive">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/geist_semi_bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BNVTextStyleInactive">
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:fontFamily">@font/geist_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% makes it perfectly circular -->
    </style>

</resources>
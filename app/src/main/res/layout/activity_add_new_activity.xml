<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.AddNewActivityActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_24" />

    <include
        android:id="@+id/toolBar"
        layout="@layout/view_toolbar"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rbMenstruation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_radio_button"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgRBMenstruation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.basalbody.app.utils.BasalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:text="@string/label_menstruation"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgRBMenstruation"
            app:layout_constraintTop_toTopOf="parent"
            app:textStyle="normal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rbIntercourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@drawable/bg_radio_button"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/rbMenstruation"
        app:layout_constraintStart_toEndOf="@id/rbMenstruation"
        app:layout_constraintTop_toTopOf="@id/rbMenstruation">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgRBIntercourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_unselected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.basalbody.app.utils.BasalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:text="@string/label_intercourse"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgRBIntercourse"
            app:layout_constraintTop_toTopOf="parent"
            app:textStyle="normal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/llAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_22"
        app:cardElevation="@dimen/dp_5"
        app:contentPadding="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/rbMenstruation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <com.basalbody.app.utils.BasalTextView
                android:id="@+id/btnYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_corners_gradient"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_5"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:textStyle="normal" />

            <com.basalbody.app.utils.BasalTextView
                android:id="@+id/btnNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_corners"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_5"
                android:text="No"
                android:textColor="#46B74F"
                android:textSize="@dimen/sp_12"
                app:textStyle="normal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.basalbody.app.utils.BasalTextField
        android:id="@+id/etTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:btf_drawableStart="@drawable/ic_temperature"
        app:btf_hint="@string/hint_enter_temperature"
        app:btf_inputType="numberDecimal"
        app:btf_labelText="@string/label_temperature"
        app:btf_maxLength="5"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/llAnswer" />

    <com.basalbody.app.utils.BasalTextField
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false"
        app:btf_drawableStart="@drawable/ic_calender_24"
        app:btf_hint="@string/hint_select_date"
        app:btf_labelText="@string/label_date"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/etTemperature" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvLabelNotes"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/label_note"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_edit_text"
        android:gravity="top|start"
        android:hint="@string/hint_enter_note"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="5"
        android:padding="@dimen/dp_17"
        android:textColor="@color/color_edittext_text"
        android:textColorHint="@color/color_edittext_hint"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/tvLabelNotes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        style="@style/FilledButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:fontFamily="@font/geist_regular"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        android:text="@string/btn_add"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
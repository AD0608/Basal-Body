<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_today_menstruation_activity"
    android:layout_marginBottom="@dimen/dp_15"
    android:elevation="@dimen/dp_2"
    android:layout_marginHorizontal="@dimen/dp_2"
    android:paddingVertical="@dimen/dp_14"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgActivity"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:src="@drawable/ic_menstruation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/label_menstruation"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toStartOf="@id/tvActivityStatus"
        app:layout_constraintStart_toEndOf="@id/imgActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:textStyle="normal" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintEnd_toStartOf="@id/tvActivityStatus"
        android:text="26Â°"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgActivity"
        app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
        app:textStyle="bold" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/bg_rounded_corners"
        android:backgroundTint="#39BC5C"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="Yes"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textStyle="normal" />

</androidx.constraintlayout.widget.ConstraintLayout>
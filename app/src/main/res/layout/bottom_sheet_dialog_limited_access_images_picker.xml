<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/constraintMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottomsheet_bg"
        android:backgroundTint="@color/color_peach_extra_light"
        android:orientation="vertical">

        <com.basalbody.app.utils.BasalTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            app:textStyle="medium"
            android:text="@string/message_this_app_have_limited_access_photos_which_you_selected"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLimitedAccessImages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="vertical"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:itemCount="4"
            tools:listitem="@layout/each_row_limited_access_image" />

        <LinearLayout
            android:id="@+id/linearLayoutAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_peach_extra_light"
            android:gravity="end"
            android:padding="@dimen/dp_15">

            <com.basalbody.app.utils.BasalTextView
                android:id="@+id/textViewAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textStyle="medium"
                android:background="@drawable/bg_white_radius_10"
                android:backgroundTint="@color/colorSecondary"
                android:fontFamily="@font/geist_medium"
                android:paddingHorizontal="@dimen/dp_40"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/button_add"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

</layout>
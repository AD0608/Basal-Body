<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_bluetooth_device_item"
    android:layout_marginBottom="@dimen/dp_15"
    android:padding="@dimen/dp_13">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBluetoothIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bluetooth_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvBluetoothDeviceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:text="BBT Sensor 01"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toStartOf="@id/btnConnectDevice"
        app:layout_constraintBottom_toTopOf="@id/tvBluetoothDeviceType"
        app:layout_constraintStart_toEndOf="@id/imgBluetoothIcon"
        app:layout_constraintTop_toTopOf="@id/imgBluetoothIcon"
        app:layout_constraintVertical_chainStyle="packed"
        app:textStyle="bold" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvBluetoothDeviceType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:text="BBT Sensor 01"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toStartOf="@id/btnConnectDevice"
        app:layout_constraintBottom_toBottomOf="@id/imgBluetoothIcon"
        app:layout_constraintStart_toEndOf="@id/imgBluetoothIcon"
        app:layout_constraintTop_toBottomOf="@id/tvBluetoothDeviceName"
        app:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConnectDevice"
        style="@style/FilledButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geist_regular"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="@string/btn_connect"
        android:layout_marginEnd="@dimen/dp_3"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
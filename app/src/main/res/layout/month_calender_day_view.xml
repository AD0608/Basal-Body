<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvMonthDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textStyle="semiBold"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dotMenstruation"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_goneMarginEnd="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:src="@drawable/ic_dot_menstruation"
        app:layout_constraintEnd_toStartOf="@id/dotIntercourse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tvMonthDay"
        app:layout_constraintTop_toBottomOf="@id/tvMonthDay" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dotIntercourse"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_goneMarginStart="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginEnd="@dimen/dp_0"
        android:src="@drawable/ic_dot_intercourse"
        app:layout_constraintEnd_toStartOf="@id/dotTemperatureTrend"
        app:layout_constraintStart_toEndOf="@id/dotMenstruation"
        app:layout_constraintTop_toBottomOf="@id/tvMonthDay" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dotTemperatureTrend"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_goneMarginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_4"
        android:src="@drawable/ic_dot_temperature_trend"
        app:layout_constraintEnd_toEndOf="@id/tvMonthDay"
        app:layout_constraintStart_toEndOf="@id/dotIntercourse"
        app:layout_constraintTop_toBottomOf="@id/tvMonthDay" />


</androidx.constraintlayout.widget.ConstraintLayout>
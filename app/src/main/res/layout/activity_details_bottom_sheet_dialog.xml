<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintMain"
    android:background="@drawable/bottomsheet_bg"
    android:padding="@dimen/dp_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgActivityIcon"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_28"
        android:src="@drawable/ic_menstruation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="Menstruation"
        android:layout_marginStart="@dimen/dp_13"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toStartOf="@id/tvActivityStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgActivityIcon"
        app:textStyle="normal" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityTemperature"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="26Â°"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toStartOf="@id/tvActivityStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
        app:textStyle="bold" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corners"
        android:backgroundTint="#39BC5C"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="Yes"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/tvActivityTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvActivityTitle"
        app:textStyle="normal" />

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvActivityDescription"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/dummy_lorem_ipsum"
        android:layout_marginStart="@dimen/dp_13"
        android:textColor="@color/color737373"
        android:textSize="@dimen/sp_15"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvActivityTemperature"
        app:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        style="@style/FilledButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:fontFamily="@font/geist_regular"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_10"
        android:text="@string/btn_back"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvActivityDescription"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
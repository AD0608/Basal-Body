<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_notification_item"
    android:layout_marginBottom="@dimen/dp_15"
    android:padding="@dimen/dp_15">

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvQue"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum sit amet consectetur?"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:textStyle="bold"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivArrow"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dropdown_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvQue"/>

    <View
        android:id="@+id/viewLine"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_edittext_hint"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQue"/>

    <com.basalbody.app.utils.BasalTextView
        android:id="@+id/tvAns"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Lacus cursus placerat ut et integer amet vehicula. Pellentesque natoque lorem viverra consectetur morbi fermentum in sit. Pellentesque tristique."
        android:textColor="@color/color_edittext_hint"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grpFaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="viewLine, tvAns"/>


</androidx.constraintlayout.widget.ConstraintLayout>